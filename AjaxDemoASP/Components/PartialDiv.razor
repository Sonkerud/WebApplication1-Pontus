@using AjaxDemoASP.Models
@using AjaxDemoASP

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web;
@inject MoviesServices  MovieService

<h3>PartialDiv</h3>

<button class="btn btn-block bg-warning" @onclick="(e=> ShowMovieInfo())"><h3>Show movie Description</h3></button>

@if (show)
{
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                @MovieService.GetMovieById(1).Title
            </dt>
            <dd class="col-sm-10">
                @MovieService.GetMovieById(1).Description
            </dd>

        </dl>
    </div>
}

<div>
    <button class="btn btn-block bg-warning" @onclick="(e=> ShowClass())"><h3>Show movies</h3></button>
    @if (show)
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Namn</th>

                    <th>Ändra Närvaro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in MovieService.GetAllMovies())
                {
                    <tr>
                        <td>@movie.Title</td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code{
    Movie selectedMovie;
    bool show = false;
    void ShowMovieInfo()
    {
        show = true;

    }
    void ShowClass()
    {

        show = true;

    }
    void SelectMovie(string id)
    {

    }
}