@model IdentityASPPontus.Models.ViewModels.UserVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm bg-success navbar-dark border-bottom box-shadow mb-3 sticky-top">
        <div class="container font-weight-bold bg-success ">
            <a class="navbar-brand" asp-controller="Account" asp-action="Login"><div class="">Login</div></a>
            <a class="navbar-brand" asp-controller="Account" asp-action="Logout"><div class="">Logout</div></a>

            <form class="form-inline" asp-action="Login">
                <label asp-for="UserName" class="mr-sm-2">Email address:</label>
                <input asp-for="UserName" class="form-control mb-2 mr-sm-2" placeholder="Enter UserName" id="email">
                <label asp-for="Password" class="mr-sm-2">Password:</label>
                <input asp-for="Password" type="password" class="form-control mb-2 mr-sm-2" placeholder="Enter password" id="pwd">
                <div class="form-check mb-2 mr-sm-2">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </form>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>


    <div>
        @RenderBody()
    </div>
</body>
</html>
